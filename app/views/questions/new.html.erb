<h3>Submit a New Question</h3>

<% if @question.errors.any? %>
  <ul>
    <% @question.errors.full_messages.each do |mssg| %>
      <li><%= mssg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(controller: "questions") do %>
  <%= label_tag(:title, "Title:") %>
  <%= text_field_tag(:title, @question.title ) %>
  <%= label_tag(:description, "Description:") %>
  <%= text_area_tag(:description, @question.description ) %>
  <%= submit_tag %>
<% end %>
