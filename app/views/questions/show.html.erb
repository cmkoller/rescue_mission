<div class="row">
  <div class="columns large-9">
    <h3><%= @question.title %></h3>
  </div>

  <div class="columns large-3">
    <%= form_tag(question_path(@question.id), method: "delete") do %>
      <ul class="change-links right">
        <li><a href="<%= question_path(@question.id) %>/edit">Edit</a></li>
        <li>
          <%= submit_tag("Delete") %>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<p><%= @question.description %></p>

<a href="<%= questions_path %>" class="right">Back to Questions</a>
<hr />

<%= render 'answers/answer_form' %>

<h4>Answers</h4>

<ul class="answers">
  <% @question.answers.each do |answer| %>
    <li class="answer"><%= answer.description %></li>
  <% end %>
</ul>
